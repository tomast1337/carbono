programa "InsertionSort" {
    // Initialize array with unsorted numbers
    var arr: [inteiro32] = [64, 34, 25, 12, 22, 11, 90];
    
    escreval("Original array:");
    var len: inteiro32 = arr.len;
    cada (i: 0..len) {
        escreval("  arr[${i}] = ${arr[i]}");
    }
    
    // Insertion Sort Algorithm
    var n: inteiro32 = arr.len;
    cada (i: 1..n) {
        var key: inteiro32 = arr[i];
        var j: inteiro32 = i - 1;
        
        // Move elements greater than key one position ahead
        var continue_loop: inteiro32 = 1;
        
        enquanto (continue_loop > 0) {
            se (j < 0) {
                continue_loop = 0;
            } senao {
                var arr_j_val: inteiro32 = arr[j];
                se (arr_j_val <= key) {
                    continue_loop = 0;
                } senao {
                    var j_plus_1: inteiro32 = j + 1;
                    arr[j_plus_1] = arr[j];
                    j = j - 1;
                }
            }
        }
        var j_plus_1: inteiro32 = j + 1;
        arr[j_plus_1] = key;
    }
    
    escreval("Sorted array (Insertion Sort):");
    var final_len: inteiro32 = arr.len;
    cada (i: 0..final_len) {
        escreval("  arr[${i}] = ${arr[i]}");
    }
}

