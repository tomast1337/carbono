programa "Estruturas" {
    estrutura Pessoa {
        nome: texto
        idade: inteiro32
        filhos: [Pessoa]
    }

    var p: Pessoa = nova Pessoa;
    p.nome = "João";
    p.idade = 20;
    p.filhos = [];

    var filho1: Pessoa = nova Pessoa;
    filho1.nome = "João Junior";
    filho1.idade = 10;
    filho1.filhos = [nova Pessoa];
    p.filhos.push(filho1);

    escreval("Nome: ${p.nome}");
    escreval("Idade: ${p.idade}");
    escreval("Filhos: ${p.filhos.len}");

    cada (i : 0..p.filhos.len) {
        escreval("Filho ${i + 1}: ${p.filhos[i].nome} - Idade: ${p.filhos[i].idade}\n");
    }
}