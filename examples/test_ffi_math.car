programa "TesteMatematica" {
    
    externo mat "libm.so.6" {
        // Mapeamento explícito
        funcao cosseno(x: real64): real64 = "cos"
        funcao seno(x: real64): real64 = "sin"
        
        // Mapeamento implícito (Basalto name == C symbol)
        funcao tan(x: real64): real64
    }

    var angulo: real64 = 3.14159265359 * 0.75; // pi
    
    // Chamada via namespace
    var s: real64 = mat.seno(angulo);
    var c: real64 = mat.cosseno(angulo);
    var t: real64 = mat.tan(angulo);
    
    escreval("Seno de ${angulo}: ${s:.4f}");
    escreval("Cosseno de ${angulo}: ${c:.4f}");
    escreval("tangente de ${angulo}: ${t:.4f}");
}