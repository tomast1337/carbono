programa "TesteUniversal" {
    
    var x: inteiro32 = 42;
    
    // 1. Universal Interpolation (Assignment)
    var msg: texto = "O valor e: ${x}";
    
    // 2. Conversion Methods
    var y: inteiro64 = "100".inteiro64();
    var s: texto = y.texto();
    
    // 3. Printing
    escreval(msg);
    escreval("Conversao: ${s}");
    
    // 4. Assert with formatting
    garantir(y == 100, "Erro na conversao: ${y}");
}

